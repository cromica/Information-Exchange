  <connectionStrings>
    <add name="OrderManagementEuropeEntities" connectionString="metadata=res://*/DataAccess.Order.csdl|res://*/DataAccess.Order.ssdl|res://*/DataAccess.Order.msl;provider=System.Data.SqlClient;provider connection string=&quot;data source=EN63531;initial catalog=OrderManagementEurope;integrated security=True;MultipleActiveResultSets=True;App=EntityFramework&quot;" providerName="System.Data.EntityClient" />
